        <activity android:name=".HistoryController" />
        <activity android:name=".CreatePlanMonitorController" />
        <activity android:name=".CreatePlanController" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".HistoryData" />
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".MyPlanController" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>